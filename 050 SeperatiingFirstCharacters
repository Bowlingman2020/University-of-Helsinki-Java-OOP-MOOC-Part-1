import java.util.Scanner;

public class FirstCharacters {
    public static void main(String[] args) {
        Scanner reader = new Scanner(System.in);
         System.out.print("Type your name: ");
         String inputUsername = reader.nextLine();
         int length = inputUsername.length();
         
         if (length >=3) {
             
       
         char firstCharacter = inputUsername.charAt(0);
         System.out.println("1. character: " + firstCharacter);
         char secondCharacter = inputUsername.charAt(1);
         System.out.println("2. character: " + secondCharacter);
         char thirdCharacter = inputUsername.charAt(2);
         System.out.println("3. character: " + thirdCharacter);
    
      } 
             
      }
}
